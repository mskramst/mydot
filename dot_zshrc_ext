# Source common shell configurations
if [ -f "$HOME/.common_shell_config" ]; then
    source "$HOME/.common_shell_config"
fi


# ------------------------------ prompt (ZSH-specific) ------------------------------
# Enable git info
autoload -Uz vcs_info
precmd() {
  vcs_info
}
zstyle ':vcs_info:git:*' formats '%b '
# Color prompt
setopt PROMPT_SUBST
precmd() { print -P "%~" }
PROMPT="$winidx %F{cyan}(%n)%f  -->%F{blue}% %F{red}${vcs_info_msg_0_}%f "

